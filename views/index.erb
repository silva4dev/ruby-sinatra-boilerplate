<h1>All Posts</h1>

<ul>
<% @posts.each do |post| %>

  <li>
    <a href="/posts/<%= post.id %>">
      Votes: <%= post.votes %> - <%= post.title %>
    </a>
  </li>

<% end %>
</ul>

<h1>Create new post</h1>

<form action="/posts" method="post">
  <label for="title">Title</label>
  <input type="text" name="title">

  <label for="url">URL</label>
  <input type="text" name="url">

  <input type="submit">

</form>
